<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="vertical"
        android:padding="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingTop="16dp"
            android:text="Информация о транспортном средстве"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:id="@+id/tv_info_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:fadingEdge="horizontal"
            android:padding="16dp"
            android:singleLine="true"
            android:text="Скорость движения: данные отсутствуют"
            android:textColor="@color/set_view_title"
            android:textSize="16sp" />

        <View style="@style/Interval" />

        <TextView
            android:id="@+id/tv_info_rev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:fadingEdge="horizontal"
            android:padding="16dp"
            android:singleLine="true"
            android:text="Частота вращения двигателя: данные отсутствуют"
            android:textColor="@color/set_view_title"
            android:textSize="16sp" />

        <View style="@style/Interval" />

        <TextView
            android:id="@+id/tv_info_wtemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:fadingEdge="horizontal"
            android:padding="16dp"
            android:singleLine="true"
            android:text="Температура воды в двигателе: данные отсутствуют"
            android:textColor="@color/set_view_title"
            android:textSize="16sp" />

        <View style="@style/Interval" />

        <TextView
            android:id="@+id/tv_info_oil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:fadingEdge="horizontal"
            android:padding="16dp"
            android:singleLine="true"
            android:text="Температура воды: данные отсутствуют"
            android:textColor="@color/set_view_title"
            android:textSize="16sp" />

        <View style="@style/Interval" />

        <TextView
            android:id="@+id/tv_tp_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingTop="16dp"
            android:text="Информация о давлении в шинах (не поддерживается):"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_tp_lf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:fadingEdge="horizontal"
            android:padding="16dp"
            android:singleLine="true"
            android:text="Левое переднее колесо: данные отсутствуют"
            android:textColor="@color/set_view_title"
            android:textSize="16sp" />

        <View style="@style/Interval" />

        <TextView
            android:id="@+id/tv_tp_rf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:fadingEdge="horizontal"
            android:padding="16dp"
            android:singleLine="true"
            android:text="Правое переднее колесо: данные отсутствуют"
            android:textColor="@color/set_view_title"
            android:textSize="16sp" />

        <View style="@style/Interval" />

        <TextView
            android:id="@+id/tv_tp_lb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:fadingEdge="horizontal"
            android:padding="16dp"
            android:singleLine="true"
            android:text="Левое заднее колесо: данные отсутствуют"
            android:textColor="@color/set_view_title"
            android:textSize="16sp" />

        <View style="@style/Interval" />

        <TextView
            android:id="@+id/tv_tp_rb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:fadingEdge="horizontal"
            android:padding="16dp"
            android:singleLine="true"
            android:text="Правое заднее колесо: данные отсутствуют"
            android:textColor="@color/set_view_title"
            android:textSize="16sp" />

        <View style="@style/Interval" />
    </LinearLayout>
</ScrollView>
